{

  "manifest_version": 2,
  "name": "Rest",
  "version": "1.0",

  "description": "Adds a browser action icon to the toolbar. The active tab's body content is then replaced with a picture of the chosen beast.",
  "homepage_url": "",
  "icons": {
    "48": "icons/restify.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "Beastify",
    "default_popup": "popup/rest.html"
  },

  "web_accessible_resources": [
    "img/cute_cat.jpg"
  ]

}
